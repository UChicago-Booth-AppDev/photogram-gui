<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
    <dd><img src="<%=@photo.image%>"></dd>
  <dt>Caption</dt>
    <dd><%=@photo.caption%></dd>
  <dt>Owner</dt>
    <dd><%=@photo.poster.username%></dd>
  <dt>Posted</dt>
    <dd><%=@photo.created_at%></dd>
  <dt>Edit photo</dt>
    <dd>
  
      <form action="/edit_photo/<%=@photo.id%>">
        <label for="edit_image">
          Image
        </label>
        <input id="edit_image" name="input_image" placeholder="Enter a URL for the image..." value=<%=@photo.image%>>
        
        <label for="edit_caption">
          Caption
        </label>
        <input id="edit_caption" name="input_caption" placeholder="Enter a caption for the image..."value=<%=@photo.caption%>>
        
        <button>Update photo</button>
      
      </form>
    
    </dd>
  <dt>Delete photo</dt>
    <dd>
      <a href="/delete_photo/<%=@photo.id%>">Delete this photo</a>
    </dd>
</dl>

<h2>Comments</h2>

<table>
    <tr>
      <th>Commenter</th>
      <th>Comment</th>
      <th>Posted</th>
    </tr>

    <%@photo.comments.each do |a_comment|%>
    <tr>
      <td>
        <%=a_comment.commenter.username%>
      </td>
      <td>
        <%=a_comment.body%>
      </td>
      <td>
        <%=a_comment.created_at%>
      </td>
     
    </tr>
    <%end%>
</table>

